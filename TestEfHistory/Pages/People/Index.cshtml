@page
@model TestEfHistory.Pages.People.IndexModel
@{
    ViewBag.Title= "People";
}

<a class="btn btn-primary" asp-page="./PersonDetail">Add person</a>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Created On</th>
    </tr>
    </thead>
    <tbody>
    @if(Model.People.Any())
    {
        foreach (var person in Model.People)
        {
            <tr>
                <td><a asp-page="./PersonDetail" asp-route-id="@person.Id">@person.Name</a></td>
                <td>@person.CreatedOn</td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="2">No people found</td>
        </tr>
    }
    </tbody>
</table>